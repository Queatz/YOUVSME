<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Entrance"
    android:id="@+id/sex"
    android:background="@drawable/sex">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/bkg"
        android:adjustViewBounds="true"/>

    <FrameLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="24dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="24dp">

        <TextView
            android:id="@+id/facebookButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/red_button"
            android:drawableLeft="@drawable/facebook"
            android:text="Log in with Facebook"
            android:paddingTop="15.5dp"
            android:paddingBottom="16.5dp"
            android:textSize="24sp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"/>

        <Button style="@style/Widget.AppCompat.Button.Borderless"
            android:id="@+id/how_it_works_button"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_above="@+id/facebookButton"
            android:layout_margin="20dp"
            android:textColor="@color/white50"
            android:text="HOW DOES IT WORK?"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textAlignment="center" />

    </RelativeLayout>

</RelativeLayout>
